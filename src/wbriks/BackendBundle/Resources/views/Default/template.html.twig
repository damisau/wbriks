<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>{% block title %}CRIS RIKS platform backend{% endblock %}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="Charisma, a fully featured, responsive, HTML5, Bootstrap admin template.">
	<meta name="author" content="Muhammad Usman">

	<!-- The styles -->
	<style type="text/css">
	  body {
		padding-bottom: 40px;
	  }
	  .sidebar-nav {
		padding: 9px 0;
	  }
	</style>
	{% stylesheets '@wbriksBackendBundle/Resources/public/css/*' %}
    	<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}

	<!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
	  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<!-- The fav icon -->
	<link rel="shortcut icon" href="img/favicon.ico">
		
</head>

<body>
		<!-- topbar starts -->
		<div class="container-fluid">
		<div class="row-fluid">
				
			<!-- left menu starts -->
			<div class="span3 main-menu-span">
				<div class="well nav-collapse sidebar-nav">
					{% block menu_left %}
					<ul class="nav nav-tabs nav-stacked main-menu">
						<li class="nav-header hidden-tablet">Countries and Arrangements</li>
						<li><a class="ajax-link" href="{{ path('wbriks_countries_list') }}"><i class="icon-home"></i><span class="hidden-tablet"> Countries</span></a></li>
						<li><a class="ajax-link" href="{{ path('wbriks_arrangements_list')}}"><i class="icon-eye-open"></i><span class="hidden-tablet"> Arrangements</span></a></li>
						<!--
                        <li><a class="ajax-link" href="form.html"><i class="icon-edit"></i><span class="hidden-tablet">Memberships</span></a></li>
						<li><a class="ajax-link" href="chart.html"><i class="icon-list-alt"></i><span class="hidden-tablet"> Charts</span></a></li>
						<li><a class="ajax-link" href="typography.html"><i class="icon-font"></i><span class="hidden-tablet"> Typography</span></a></li>
						<li><a class="ajax-link" href="gallery.html"><i class="icon-picture"></i><span class="hidden-tablet"> Gallery</span></a></li>
                        -->
                        <li class="nav-header hidden-tablet">Country - Level Indicators</li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_population_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> Population</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_gdp_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> GDP, current US$</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_gdp_capita_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> GDP per capita, current US$</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_gni_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> GNI, current US$</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_fdi_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> FDI, current US$</span></a>
                        </li>

                        <li class="nav-header hidden-tablet">Arrangement - Level Indicators</li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_population_arrangement_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet">Population</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_gdp_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> GDP, current US$</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_gdp_capita_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> GDP per capita, current US$</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_gni_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> GNI, current US$</span></a>
                        </li>
                        <li><a class="ajax-link" href="{{ path('wbriks_indicator_fdi_country_list') }}">
                            <i class="icon-align-justify"></i><span class="hidden-tablet"> FDI, current US$</span></a>
                        </li>

                        <li class="nav-header hidden-tablet">Misc</li>
						<li><a class="ajax-link" href="table.html"><i class="icon-align-justify"></i><span class="hidden-tablet"> Tables</span></a></li>
						<li><a class="ajax-link" href="calendar.html"><i class="icon-calendar"></i><span class="hidden-tablet"> Calendar</span></a></li>
						<li><a class="ajax-link" href="grid.html"><i class="icon-th"></i><span class="hidden-tablet"> Grid</span></a></li>
						<li><a class="ajax-link" href="file-manager.html"><i class="icon-folder-open"></i><span class="hidden-tablet"> File Manager</span></a></li>
						<li><a href="tour.html"><i class="icon-globe"></i><span class="hidden-tablet"> Tour</span></a></li>
						<li><a class="ajax-link" href="icon.html"><i class="icon-star"></i><span class="hidden-tablet"> Icons</span></a></li>
						<li><a href="error.html"><i class="icon-ban-circle"></i><span class="hidden-tablet"> Error Page</span></a></li>
						<li><a href="login.html"><i class="icon-lock"></i><span class="hidden-tablet"> Login Page</span></a></li>
					</ul>
					{% endblock %}
				</div><!--/.well -->
			</div><!--/span-->
			<!-- left menu ends -->
			
			<noscript>
				<div class="alert alert-block span9">
					<h4 class="alert-heading">Warning!</h4>
					<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
				</div>
			</noscript>
			
			<div id="content" class="span9">
			<!-- content starts -->
				<div>
					{% block breadcrumb %}
					<ul class="breadcrumb">
						<li>
							<a href="#">Home</a> <span class="divider">/</span>
						</li>
						<li>
							<a href="#">Dashboard</a>
						</li>
					</ul>
					{% endblock %}
				</div>
				{% block main_content %}
				{% endblock %}		
			</div><!--/#content.span10-->
		</div><!--/fluid-row-->
				
		<hr>

		<footer>
			{% block footer %}
			<p class="pull-left">&copy; <a href="http://www.cris.unu.edu/riks" target="_blank">CRIS RIKS platform</a> 2012</p>
			{% endblock %}
		</footer>
		
	</div><!--/.fluid-container-->

	<!-- external javascript
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->

	<!-- jQuery -->
	{% javascripts
    '@wbriksBackendBundle/Resources/public/js/jquery-1.7.2.min.js'
    '@wbriksBackendBundle/Resources/public/js/jquery-ui-1.8.21.custom.min.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-transition.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-alert.js'
	'@wbriksBackendBundle/Resources/public/js/bootstrap-modal.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-tab.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-tooltip.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-dropdown.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-popover.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-button.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-collapse.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-carousel.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-typeahead.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-tour.js'
    '@wbriksBackendBundle/Resources/public/js/jquery.cookie.js'
    '@wbriksBackendBundle/Resources/public/js/fullcalendar.min.js'
    '@wbriksBackendBundle/Resources/public/js/jquery.dataTables.min.js'
    '@wbriksBackendBundle/Resources/public/js/ColumnFilterWidgets.js'
    '@wbriksBackendBundle/Resources/public/js/excanvas.js'
    '@wbriksBackendBundle/Resources/public/js/jquery.flot.min.js'
    '@wbriksBackendBundle/Resources/public/js/chosen.jquery.min.js'
    '@wbriksBackendBundle/Resources/public/js/bootstrap-scrollspy.js' %}
    <script src="{{ asset_url }}"></script>
	{% endjavascripts %}
    {% block inline_scripts %}

    {% endblock %}
</body>
</html>