{% extends 'wbriksBackendBundle:Default:template.html.twig' %}
{% block title %}The arrangements in the RIKS platform{% endblock %}
{% block menu_left %}
  {{ parent() }}
{% endblock %}
{% block main_content %}
{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash-notice alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
<div class="box span12">
	<div class="box-header well" data-original-title="">
		<h2><i class="icon-user"></i>Arrangements</h2>
		<div class="box-icon">
			<a href="{{ path('wbriks_arrangement_create') }}" title="Create new Arrangement" class="btn btn-setting btn-round">
                <i class="icon-cog"></i>
            </a>
			<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
			<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
		</div>
	</div>
</div>
<div class="box-content">
	<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
		<table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
			<thead>
				<tr>
					  <th>Internal id</th>
					  <th>Arrangement</th>
					  <th>Action</th>                                          
				  </tr>
			</thead>		
						  
			<tbody role="alert" aria-live="polite" aria-relevant="all">
			{% for arrangement in arrangements %}
				<tr class="{{ cycle(['odd', 'even'], loop.index) }}">
					<td class="center ">{{ arrangement.id }}</td>
					<td class="  sorting_1">{{ arrangement.name }}</td>
					<td class="center ">
						<a class="btn btn-info" href="{{ path('wbriks_arrangement_edit', {'id': arrangement.id}) }}">
							<i class="icon-edit icon-white"></i>  
							Edit                                            
						</a>
						<a class="btn btn-danger" href="{{ path('wbriks_arrangement_delete', {'id': arrangement.id}) }}">
							<i class="icon-trash icon-white"></i> 
							Delete
						</a>
					</td>
				</tr>
  			{% endfor %}
  			</tbody>
		</table>
	</div>	
</div><!-- eo box-content -->
{% endblock %}